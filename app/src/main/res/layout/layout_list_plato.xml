<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COD: "
            android:textColor="#BBBBBB"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="#BBBBBB"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPrecioU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uni: S/ 0.00"
                android:textColor="#BBBBBB"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPrecioF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fam: S/ 0.00"
                android:textColor="#BBBBBB"
                android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditarPlato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#673AB7" />

    <ImageButton
        android:id="@+id/btnEliminarPlato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Eliminar Plato"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#FF0000" />

</LinearLayout>